{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "lib": ["ES6", "DOM", "ESNext"],
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
